{
  "name": "Reactivly",
  "short_name" : "Reactivly",
  "description": "Presenter Mode for Reactivly",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "256": "public/logo_256.png"
  },
  "browser_action": {
    "default_icon": {
      "256": "images/logo_256.png"
    }
  },
  "options_page" : "index.html",
  "permissions": [
    "tabs",
    "storage",
    "*://localhost/*",
    "*://reactivly.app/*",
    "*://fonts.googleapis.com/*"
  ],
  "background":{
    "scripts": ["background.js"]
  },
  "offline_enabled": false
}