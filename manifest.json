{
  "name": "Reactiv.ly",
  "short_name" : "Reactiv.ly",
  "description": "Presenter Mode for Reactiv.ly",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "256": "logo_256.png"
  },
  "author": "Daniel Walker",
  "browser_action": {
    "default_icon": {
      "256": "logo_256.png"
    },
    "default_title": "Reactiv.ly"
  },
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  }
}