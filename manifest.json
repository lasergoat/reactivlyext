{
  "name": "Reactivly",
  "short_name" : "Reactivly",
  "description": "Presenter Mode for Reactivly",
  "version": "0.0.1",
  "manifest_version": 2,
  "icons": {
    "256": "logo_256.png"
  },
  "browser_action": {
    "default_icon": {
      "256": "logo_256.png"
    }
  },
  "options_page" : "index.html",
  "permissions": [
    "tabs",
    "storage",
    "*://localhost/*",
    "*://reactivly.app/*",
    "*://fonts.googleapis.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://localhost/*"],
      "css": ["static/css/main.css"],
      "js": ["static/js/main.js"]
    }
  ]
}